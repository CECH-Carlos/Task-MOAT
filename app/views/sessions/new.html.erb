<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
        <%= form.label :username %>
        <%= form.text_field :username, class: "form-control", placeholder: "your username" %>
    </div>
    
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "your password"  %>
        <%= link_to 'Forgot your password?', password_reset_path %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
<% end %>